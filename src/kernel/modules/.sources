#define MODULE(name) \
	PROJECT(name) \
	LINKER_SCRIPT("/src/kernel/${TARGET_ARCH}-kos/module.ld") \
	L_FLAGS("-shared") \
	C_FLAGS("-shared") \
	C_FLAGS("-fPIC") \
	L_FLAGS("-Wl,--nmagic") \
/*	L_FLAGS("-Wl,--no-check-sections") */ \
	L_FLAGS("-nostdlib") \
	LIB("gcc") \
	C_FLAGS("-static-libgcc") \
	L_FLAGS("-static-libgcc") \
	C_FLAGS("-ffreestanding") \
	L_FLAGS("-ffreestanding") \
	SOURCE("/src/kernel/modules/module.S")

BEGIN MODULE("kernel.procfs")
	SET_OUTPUT("/bin/procfs.mod")
	SET_DISKFILE("/mod/procfs.mod")

	SOURCE("procfs/*.c")
END







